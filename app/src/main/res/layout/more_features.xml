<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/audioTrack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/audiotrack"
            android:drawableTint="?attr/ThemeColor"
            android:focusable="true"
            android:text="Audio Track"
            android:textAllCaps="false"
            android:textColor="?attr/ThemeColor" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/subtitleButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/subtitles"
            android:drawableTint="?attr/ThemeColor"
            android:focusable="true"
            android:text="Subtitle"
            android:textAllCaps="false"
            android:textColor="?attr/ThemeColor" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/speed"
            android:drawableTint="?attr/ThemeColor"
            android:focusable="true"
            android:text="Speed"
            android:textAllCaps="false"
            android:textColor="?attr/ThemeColor" />
        />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/timer"
            android:drawableTint="?attr/ThemeColor"
            android:focusable="true"
            android:text="Sleep Timer"
            android:textAllCaps="false"
            android:textColor="?attr/ThemeColor" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/picture_in_picture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:drawableTop="@drawable/picture_in_picture"
            android:drawableTint="?attr/ThemeColor"
            android:focusable="true"
            android:text="Pip"
            android:textAllCaps="false"
            android:textColor="?attr/ThemeColor" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>